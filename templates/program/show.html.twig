{% extends 'base.html.twig' %}

{% block title %}Série: {{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>Durée: {{programDuration}}</p>

            {% for season in program.seasons %}
            <a  href="{{ path("program_season_show", { slug: program.slug ,  season: season.id }) }}" >Saisons: {{ season.number }}</a><br>
            {% endfor %}

        </div>
    </div>

    <strong>Acteurs :</strong>
<ul>
    {% for actor in program.actors %}
        <li>{{ actor.name }}</li>
        <a href="{{ path('actor_show', {id:actor.id})}}">Page acteur</a>
    {% else %}
        <li>Aucun acteur pour cette série</li>
    {% endfor %}
</ul>

    <a class="btn btn-secondary m-0" href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}