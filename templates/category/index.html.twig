{% extends 'base.html.twig' %}

{% block title %}Nos catégories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
            <a class="btn btn-primary m-0" href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a class="btn btn-secondary m-0" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}